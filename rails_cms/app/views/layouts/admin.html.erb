<!DOCTYPE html>
<html>
  <head>
    <title>Rails CMS: <%= @page_title || "Admin" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- adding opiton because this defaults to `media="screen"` -->
    <%= stylesheet_link_tag('admin', media: 'all') %>
  </head>

  <body>
    <div id="header">
      <h1>Rails CMS Admin</h1>
    </div>

    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>

      <div id="content">
        <%= yield %>
      </div> <!-- end content -->
    </div> <!-- end main -->

    <div id="footer">
      <p id="copyright">&copy; Rails CMS</p>
    </div> <!-- end footer -->
  </body>
</html>
